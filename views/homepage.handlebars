<div class="row">
  <div class="col-12">
    <h2>Been here before?</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="email" id="email-login" placeholder="email@email.com" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" placeholder="password123" />
      </div>
      <div class="form-group">
        <button class="btn" type="submit">Log In</button>
      </div>
      <div>
        <h6>First time?
          <button class="btn" type="submit" id="sign-up-btn">Sign up!</button>
        </h6>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>