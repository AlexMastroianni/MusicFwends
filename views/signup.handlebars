<div class="col-md-12">
  <h2>Sign up to Music Fwends</h2>

  <form class="form signup-form">
    <div class="form-group form-row">
      <div class="col-3">
        <input type="email" class="form-control" id="email-signup" placeholder="Email: email@email.com" aria-describedby="emailInput">
      </div>

      <div class="col-3">
        <input type="text" class="form-control" id="username-signup" placeholder="Username: LinkinParkRulz" aria-describedby="usernameInput">
      </div>
    </div>

    <div class="form-group form-row">
      <div class="col-6">
        <input type="password" id="password-signup" class="form-control" placeholder="Password: 1tssecr3t57+!" aria-describedby="passwordHelpInline">
        <small id="passwordHelpInline" class="text-muted">
          Must be 10-20 characters long, and contain a special character
        </small>
        <p id="password-strength-result">
        </p>
      </div>
    </div>

    <div class="col-3">
      <button class="btn" type="submit" id="sign-me-up-btn">Sign me up!</button>
    </div>
 
    
  </form>
</div>

<script src="https://unpkg.com/check-password-strength/dist/umd.js"></script>
<script src="./js/signup.js"></script>