<div class="row feed-title">
  <div class="col-auto">
    {{#unless user}}
    <button id="logout" type="submit" class="btn">Log Out</button>
    {{/unless}}
    <h2>Welcome, {{user.username}}, to the feed page!</h2> 
  </div>
</div>

<div class="row new-post-div">
  <div class="col-12">
    <form class="form new-post-form">
      <div class="form-group form-row">
        <textarea class="form-input col-8" id="post-content" placeholder="Write your mic drop moment here"/></textarea>
        <div class="col-8">
          <button type="submit" class="btn btn-md btn-block">Create Post</button>
        </div>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-xl-12 post-list">
    <h3>Previous Posts:</h3>

    {{#each posts as |post|}}
    <div class="row">
      <div class="col-lg-12" id="existing-posts">
        <h5><a href="/post/{{post.id}}">{{post.author.username}}</a>
          {{post.content}}</h5>

        {{#if comments.length}}
        {{#each comments as |comment|}}
        <div class="col-md-12 existing-comments">
          <p>{{comment.author.username}} commented:<a href="/comment/{{comment.id}}"></a>
            {{comment.comment}}</p>
          {{/each}}
          {{/if}}
          {{#if post.is_author}}
          <button class="btn btn-md" data-id="{{post.id}}">Delete Post</button>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


  <script src="./js/feed.js"></script>