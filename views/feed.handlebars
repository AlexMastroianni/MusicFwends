<div class="row feed-title">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}, to the feed page!</h2>
  </div>
</div>

<div class="row new-post-div">
  <div class="col-12">
    <h3>Create a New Music Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-content">Post:</label>
        <textarea class="form-input" id="post-content" name="post-content" /></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  {{!-- {{#if coments.length}} --}}
  <div class="col-xl-12 post-list">
    <h3>Previous Posts:</h3>

    {{#each posts as |post|}}
    <div class="row">
      <div class="col-lg-12 existing-posts">
        <h4><a href="/post/{{post.id}}">{{post.author.username}}</a>
          {{post.content}}</h4>
      </div>
    {{#if comments.length}}
    {{#each comments as |comment|}}
      <div class="col-md-12 existing-comments">
        <h5><a href="/comment/{{comment.id}}">{{comment.author.username}}</a>
          {{comment.comment}}</h5>
        <button class="btn btn-md" data-id="{{post.id}}">Delete Post</button>
      </div>
    </div>
    {{/each}}
    {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/feed.js"></script>