<div class="row feed-title">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}, to the feed page!</h2>
    {{#if user}}
    <button id="logout" type="submit" class="btn">Log
      Out</button>
    {{/if}}
  </div>
</div>

<div class="row new-post-div">
  <div class="col-12">
    <h3>Create a New Music Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-content">Post:</label>
        <textarea class="form-input" id="post-content" name="post-content" /></textarea>
        <emoji-picker></emoji-picker>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-xl-12 post-list">
    <h3>Previous Posts:</h3>

    {{#each posts as |post|}}
    <div class="row">
      <div class="col-lg-12 existing-posts">
        <h4><a href="/post/{{post.id}}">{{post.author.username}}</a>
          {{post.content}}</h4>

        {{#if comments.length}}
        {{#each comments as |comment|}}
        <div class="col-md-12 existing-comments">
          <h6><a href="/comment/{{comment.id}}">{{comment.author.username}}</a>
            {{comment.comment}}</h6>
          {{/each}}
          {{/if}}
          {{!-- {{#if post.is_author}} --}}
          <button class="btn btn-md" data-id="{{post.id}}">Delete Post</button>
          {{!-- {{/if}} --}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <script type="module">
    import 'https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/picker.js'
    import 'https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/database.js'
    import insertText from 'https://cdn.jsdelivr.net/npm/insert-text-at-cursor@0.3.0/index.js'

    document.querySelector('emoji-picker').addEventListener('emoji-click', e => {
      insertText(document.querySelector('input'), e.detail.unicode)
    })

  </script>
  <script src="./js/feed.js"></script>